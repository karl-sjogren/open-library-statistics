<configuration>
  <system.webServer>
    <webSocket enabled="false" />
    <iisnode node_env="production" />
    <handlers>
      <add name="iisnode" path="index.js" verb="*" modules="iisnode" />
    </handlers>   
    <rewrite>
      <rules>
        <rule name="All">
          <match url="/*" />
          <conditions logicalGrouping="MatchAll">
            <add input="{REQUEST_URI}" negate="true" pattern="^/iisnode/" ignoreCase="true" />
          </conditions>
          <action type="Rewrite" url="index.js" />
        </rule>
      </rules>
    </rewrite>
    <security>
      <requestFiltering>
        <hiddenSegments>
          <add segment="node_modules" />
        </hiddenSegments>
      </requestFiltering>
    </security> 
  </system.webServer>
</configuration>