
          <div class="row">
            {{#if success}}
              <div class="alert alert-success">Successfully created an instance named {{name}}</div>
            {{/if}}
            
            {{#if failure}}
              <div class="alert alert-danger">Something went wrong when creating the instance. This might be caused by a duplicate name or the database being down.</div>
            {{/if}}
            
            <form role="form" method="post">
              <div class="form-group">
                <label for="name">Instance name</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Enter instance name">
              </div>
              <button type="submit" class="btn btn-default">Create</button>
            </form>
          </div>